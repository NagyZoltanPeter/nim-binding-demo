{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cpp_demo_app",
            "type": "shell",
            "command": "mkdir -p examples/cpp_demo_app/build && cd examples/cpp_demo_app/build && cmake .. && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "clean cpp_demo_app build",
            "type": "shell",
            "command": "rm -rf examples/cpp_demo_app/build",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build libnimdemo",
            "type": "shell",
            "command": "cd libnimdemo && nimble buildlib",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}